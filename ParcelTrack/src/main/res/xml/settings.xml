<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_notification">
        <SwitchPreference
            android:summary="@string/notification_title"
            android:key="prefNotificationEnabled" />
        <EditTextPreference
            android:title="@string/notification_hour_title"
            android:summary="@string/notification_summary"
            android:inputType="number"
            android:key="prefNotificationHour" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="catAbout"
        android:icon="@android:drawable/ic_menu_help"
        android:title="@string/title_activity_about">
        <Preference
            android:key="prefEmail"
            android:icon="@android:drawable/ic_dialog_email"
            android:title="@string/contact"
            android:summary="@string/contact_email" />
        <Preference
            android:key="prefUpgrade"
            android:title="@string/upgrade_title"
            android:summary="@string/upgrade_summary" />
        <Preference
            android:key="prefError"
            android:title="@string/error_title"
            android:summary="@string/error_summary" />
        <Preference
            android:key="prefVersion"
            android:title="@string/version" />
    </PreferenceCategory>
</PreferenceScreen>